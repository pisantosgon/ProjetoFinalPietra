@model ProjetoFinalPietra.Models.Colaborador

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Colaborador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColaboradorNome" class="control-label"></label>
                <input asp-for="ColaboradorNome" class="form-control" />
                <span asp-validation-for="ColaboradorNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorCpf" class="control-label"></label>
                <input asp-for="ColaboradorCpf" class="form-control" />
                <span asp-validation-for="ColaboradorCpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteSexo" class="control-label"></label>
                <input asp-for="ClienteSexo" class="form-control" />
                <span asp-validation-for="ClienteSexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorTelefone" class="control-label"></label>
                <input asp-for="ColaboradorTelefone" class="form-control" />
                <span asp-validation-for="ColaboradorTelefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <select asp-for="CidadeId" class ="form-control" asp-items="ViewBag.CidadeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tipocolaborador" class="control-label"></label>
                <select asp-for="TipocolaboradorId" class ="form-control" asp-items="ViewBag.TipocolaboradorId"></select>
            </div>
            <br />
            <div class="form-group">
                <input class="botao" type="submit" value="Criar" class="btn btn-primary" />
                <a class="botao" asp-action="Index">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
