@model IEnumerable<ProjetoFinalPietra.Models.Procedimento>

@{
    ViewData["Title"] = "Index";
}

<h1>Procedimento</h1>

<p>
    <a class="botao" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProcedimentoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcedimentoObservacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipoprocedimento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProcedimentoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcedimentoObservacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipoprocedimento.TipoProcedimentoNome)
            </td>
            <td>
                    <a class="botao" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a class="botao" asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a class="botao" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
